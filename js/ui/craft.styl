.flex
    display: flex

    &.column
        flex-direction: column
    &.column
        flex-direction: row
    &.wrap
        flex-wrap: wrap
    &.center
        align-items: center
    &.baseline
        align-items: baseline
    &.stretch
        align-items: stretch
    &.start
        align-items: flex-start
    &.end
        align-items: flex-end
    &.justify
        justify-content: space-between

.flex-child
    &.auto
        flex: 1 1 auto
        min-width: 0
        min-height: 0
    &.grow
        flex: 1 0 auto
    &.none
        flex: none
    &.first
        order: -1
    &.last
        order: 99999


#craft
    width: 500px

    .contents
        display: flex
        justify-content: space-around
        height: 500px

    #recipe-list-wrapper
        width: 34%

    #recipe-filters
        display: flex
        align-items: center
        margin-top: 3px
    #recipe-details
        width: 65%
        ul
            margin: 0
        .item-link
            margin-left: 3px
            cursor: pointer

    #recipe-slots
        overflow: auto
    #recipe-buttons
        display: flex
        clear: both

    .recipe-create, .recipe-auto, .recipe-craft-all
        width: 33%

    .recipe-title
        float: left

    .recipe-search, .recipe-search > input
        width: 138px
        position: relative

    .recipe-search-clear
        min-width: 0
        right: -26px
        top: 0
        position: absolute

    .recipe-list.filter-portable    .recipe.portable,
    .recipe-list.filter-liftable    .recipe.liftable,
    .recipe-list.filter-static      .recipe.static,
    .recipe-list.filter-unavailable .recipe.unavailable
        display: none!important

    .recipe-list
        height: 443px
        overflow-y: auto
        padding: 0 4px 0 0px
        position: relative

        &.searching > li
            display: none
        &.searching ul
            display: block!important
        &.searching .recipe
            display: none
        &.searching .found
            display: list-item!important

        ul
            padding: 0
        & > li > img
            position: absolute
            left: 0
        & > li
            padding-left: 16px
            list-style-type: none
            cursor: pointer

        li li
            list-style-type: none
            background: #74481b
            &:nth-child(even)
                background: #683f16

        .recipe.selected
            color: #0f0

        .recipe:hover, .group-toggle:hover
            color: lightgreen

